@techreport{auclair04b,
    author = {M.-F. Auclair-Fortier and D. Ziou},
    title = {{CAT-Based Resolution of Steady-State Heat Transfer for Image Reconstruction and Optical Flow}},
    institution = di,
    number = 03,
    month = aug,
    year = 2004,
    url = {www.dmi.usherb.ca/~auclair/Univ/Auclair-TR03.pdf},
    abstract = {This paper proposes an alternative to partial differential equations
(PDEs) for the solution of some problems in computer vision based on the
steady-state heat transfer problem. Traditionally, the method for solving such
physics-based problems is to discretize and solve a PDE by a purely
mathematical process. Instead of using the PDE, we propose to use the global
steady-state heat equation and to decompose it into basic laws. We show that
some of these laws admit an exact global version since they arise from balance
principles. We also show that the assumptions made about the other basic laws
can be made wisely, taking into account knowledge about the problem and the
domain. Moreover, we use a computational algebraic topology-based image model
which allows us to encode physical conservative laws by linking a global value
on a domain with values on its boundary. The numerical scheme is derived in a
straightforward way from the problem modeled, thus providing a physical
explanation for each step in the solution. We apply the scheme to two
applications: image reconstruction and optical flow computation.},
    keywords = {Physics-based methods, computational algebraic
        topology, image model, steady-state heat transfer problem, image
        reconstruction, optical flow},
}

@phdthesis{auclair04f,
    author = {M.-F. Auclair-Fortier},
    title = {Résolution du problème de transfert de chaleur par une approche TAC:
        application au traitement et à l'analyse des images},
    type = {Thèse de Doctorat},
    school = {Université de Sherbrooke},
    year = 2004,
    address = {Sherbrooke, Canada},
    month = jul,
    abstract = {This thesis proposes an alternative to partial differential equations (PDEs)
for the solution of some problems in computer vision based on the heat transfer
equation. Traditionally, the method for solving such physics-based problems is
to discretize and solve a PDE by a purely mathematical process. Instead of
using the PDE, we propose to use the global heat equation and to decompose it
into basic laws. We show that some of these laws admit an exact global version
since they arise from balance principles. We also show that the assumptions
made on the other basic laws can be made wisely, taking into account knowledge
about the problem and the domain. We use a computational algebraic
topology-based image model which allows us to encode a physical conservative
law by linking a global value on a domain with values on its boundary. The
numerical scheme is derived in a straightforward way from the problem modeled.
It thus provides a physical explanation of each solving step in the solution.
